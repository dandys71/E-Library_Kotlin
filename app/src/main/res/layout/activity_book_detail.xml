<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kotlin.ui.BookDetailActivity"
    android:background="@color/primary"
    style="@style/Theme.AppCompat.DayNight.NoActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="20"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/d_iv_book"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:src="@drawable/book_ex"
            android:background="@color/primaryDarker"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/d_tv_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:gravity="center_vertical"
            android:background="@color/colorAccent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/d_tv_authors"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:text="Authors"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:background="@color/primaryDarker"
            android:textStyle="bold"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/d_tv_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Description"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="start"/>
        </ScrollView>

        <TextView
            android:id="@+id/d_tv_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:textColor="@color/white"
            android:background="@color/primaryDarker"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/d_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/round_button"
            app:backgroundTint="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:text="CLICK ON ME"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>