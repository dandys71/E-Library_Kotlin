<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kotlin.ui.ReservedFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_reserved_book_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/book_item"
        android:padding="5dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/reserved_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/reserved_no_data"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/_16sdp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/rv_reserved_book_items"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rv_reserved_book_items" />
</androidx.constraintlayout.widget.ConstraintLayout>